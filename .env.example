# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# Node Environment
NODE_ENV="development"
PORT=3000

# Database
DATABASE_URL="postgresql://binventory:binventory_local@localhost:5432/binventory?schema=public"

# Authentication
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="24h"

# MeiliSearch
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY="meili_key_here"

# S3 Storage (LocalStack)
S3_ENDPOINT="http://localhost:4566"
S3_BUCKET_NAME="binventory-uploads"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="binventory"
AWS_SECRET_ACCESS_KEY="binventory_local"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-id
GITHUB_SECRET=your-github-secret 